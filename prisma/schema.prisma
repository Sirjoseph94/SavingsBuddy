generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())

  email      String  @unique
  name       String
  password   String
  isVerified Boolean @default(false)

  createdAt DateTime @default(now())

  account  Account?
  invites  Invites[]
  txRecord TxRecords[]
}

model Account {
  id        String   @id @default(uuid())
  balance   Decimal  @default(0.00) @db.Decimal(15, 2)
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique

  plans Plan[]
}

model Plan {
  id               String   @id @default(uuid())
  name             String
  host             String
  target           Decimal? @db.Decimal(15, 2)
  current_balance  Decimal  @default(0.00) @db.Decimal(15, 2)
  saving_frequency String
  start_date       DateTime
  end_date         DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user_account Account @relation(fields: [accountId], references: [id])
  accountId    String

  buddies   Invites[]
  txRecords TxRecords[]
}

model Invites {
  id String @id @default(uuid())

  plan   Plan   @relation(fields: [planId], references: [id])
  planId String

  buddies User   @relation(fields: [buddyId], references: [id])
  buddyId String

  isAccepted Boolean
}

model TxRecords {
  id          String  @id @default(uuid())
  amount      Decimal @db.Decimal(15, 2)
  description String?

  sender   User   @relation(fields: [senderId], references: [id])
  senderId String

  plan   Plan   @relation(fields: [planId], references: [id])
  planId String

  createdAt DateTime @default(now())
}
